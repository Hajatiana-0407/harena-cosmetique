{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-5">

    <!-- BOUTON POUR REVENIR À LA PAGE D'ACCUEIL OU UNE AUTRE PAGE -->
    <a href="/" class="btn btn-secondary mb-3">⬅ Retour</a>

    <!-- FORMULAIRE PAPI -->
    <div class="card shadow p-4">
        <h4 class="mb-3">Paiement Mobile Money (PAPI)</h4>

        <form id="papiForm">
            <div class="mb-3">
                <label for="phone" class="form-label">Numéro Mobile Money</label>
                <input type="text" id="phone" class="form-control" placeholder="0341234567" required>
            </div>

            <div class="mb-3">
                <label for="amount" class="form-label">Montant (MGA)</label>
                <input type="number" id="amount" class="form-control" value="5000" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                Procéder au paiement
            </button>
        </form>

        <div id="result" class="alert d-none mt-3"></div>
    </div>
</div>

<script>
document.getElementById('papiForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const data = {
        phone: document.getElementById("phone").value,
        amount: document.getElementById("amount").value
    };

    const response = await fetch("/payer", {
        method: "POST",
        headers: {"Content-Type": "application/json"},
        body: JSON.stringify(data)
    });

    const result = await response.json();

    const alertBox = document.getElementById("result");
    alertBox.classList.remove("d-none");

    if (result.error) {
        alertBox.className = "alert alert-danger mt-3";
        alertBox.innerHTML = result.error;
    } else {
        alertBox.className = "alert alert-info mt-3";
        alertBox.innerHTML = "Transaction envoyée ! ID : " + (result.transactionId ?? 'N/A');
    }
});
</script>

{% endblock %}
